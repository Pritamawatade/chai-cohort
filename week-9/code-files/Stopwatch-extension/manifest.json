{
    "manifest_version": 3,
    "name": "Stopwatch Timer Extension",
    "version": "1.0",
    "description": "A stopwatch that continues running in the background with millisecond precision.",
    "permissions": ["storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  